# Heartbeat logging configuration
logfile <%= scope.lookupvar('mydevops_blog::heartbeat::logfile') %>
logfacility daemon

# Heartbeat cluster members
node <%= scope.lookupvar('mydevops_blog::heartbeat::nodes')[0] %>  <%= scope.lookupvar('mydevops_blog::heartbeat::nodes')[1] %>

# Heartbeat communication timing
keepalive 2
warntime 10
deadtime 20
initdead 20

# Heartbeat communication paths
udpport <%= scope.lookupvar('mydevops_blog::heartbeat::udpport') %>
ucast <%= scope.lookupvar('mydevops_blog::heartbeat::ucastIf') %> <%= scope.lookupvar('mydevops_blog::heartbeat::nodeips')[0] %>
ucast <%= scope.lookupvar('mydevops_blog::heartbeat::ucastIf') %> <%= scope.lookupvar('mydevops_blog::heartbeat::nodeips')[1] %>

# Ping response 
ping <%= scope.lookupvar('mydevops_blog::heartbeat::ping') %>

# Failback behavior
auto_failback <%= scope.lookupvar('mydevops_blog::heartbeat::autoFailback') %>